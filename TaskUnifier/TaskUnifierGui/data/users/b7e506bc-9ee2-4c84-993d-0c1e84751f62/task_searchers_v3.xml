<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<tasksearchers>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>1</order>
        <title>未完成</title>
        <icon>resources\images\check.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>COMPLETED</column>
                <condition>StringCondition.EQUALS</condition>
                <value>false</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>2</order>
        <title>今日到期</title>
        <icon>resources\images\calendar.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>DUE_DATE</column>
                <condition>DaysCondition.EQUALS</condition>
                <value>0</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>3</order>
        <title>过期任务</title>
        <icon>resources\images\warning.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>DUE_DATE</column>
                <condition>DaysCondition.LESS_THAN_USING_TIME</condition>
                <value>0</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>4</order>
        <title>热门列表</title>
        <icon>resources\images\hot_pepper.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>DUE_DATE</column>
                <condition>DaysCondition.LESS_THAN_OR_EQUALS</condition>
                <value>3</value>
                <comparemodel>false</comparemodel>
            </element>
            <element>
                <column>PRIORITY</column>
                <condition>EnumCondition.GREATER_THAN_OR_EQUALS</condition>
                <value>com.leclercb.taskunifier.api.models.enums.TaskPriority#HIGH</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>5</order>
        <title>重要性列表</title>
        <icon>resources\images\importance.png</icon>
        <sorter>
            <element>
                <column>IMPORTANCE</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND"/>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>6</order>
        <title>已加星标</title>
        <icon>resources\images\star.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>STAR</column>
                <condition>StringCondition.EQUALS</condition>
                <value>true</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>7</order>
        <title>下一步行动</title>
        <icon>resources\images\next.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>STATUS</column>
                <condition>StringCondition.EQUALS</condition>
                <value>Next Action</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
    <searcher>
        <type>GENERAL</type>
        <folder/>
        <order>8</order>
        <title>已完成</title>
        <icon>resources\images\check.png</icon>
        <sorter>
            <element>
                <column>DUE_DATE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
            <element>
                <column>PRIORITY</column>
                <sortorder>DESCENDING</sortorder>
            </element>
            <element>
                <column>TITLE</column>
                <sortorder>ASCENDING</sortorder>
            </element>
        </sorter>
        <grouper/>
        <filter link="AND">
            <element>
                <column>COMPLETED</column>
                <condition>StringCondition.EQUALS</condition>
                <value>true</value>
                <comparemodel>false</comparemodel>
            </element>
        </filter>
    </searcher>
</tasksearchers>
